<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/galleryFragment">

    <fragment
        android:id="@+id/galleryFragment"
        android:name="com.rohith.imagesearchapp.ui.GalleryFragment"
        android:label="Gallery" >
        <action
            android:id="@+id/action_galleryFragment_to_detailsFragment"
            app:destination="@id/detailsFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/detailsFragment"
        android:name="com.rohith.imagesearchapp.ui.DetailsFragment"
        android:label="Photo" >
        <argument
            android:name="selectedPhoto"
            app:argType="com.rohith.imagesearchapp.data.UnsplashPhotoModel" />
    </fragment>
</navigation>